<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="FanPhotonServer"
                   namespace="FanPhotonServer.Model"> <!-- 对应的类所在的命名空间-->
<class name="User" table="users">
  <id name="Id" column="id" type="Int32">
    <generator class="native"></generator> <!-- native(本地) 主键配置 自动生成id(自动增长) auto increment-->
  </id>
  <property name="Username" column="username" type="String"></property>
  <property name="Password" column="password" type="String"></property>
  <property name="Registerdate" column="registerdate" type="DateTime"></property>
</class>

</hibernate-mapping>


